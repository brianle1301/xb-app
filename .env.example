# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/xb-app

# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/xb-app?retryWrites=true&w=majority

# Better Auth Secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-secret-here

# Firebase Admin (paste the entire service account JSON as a single line)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# Secret key for protected API endpoints (generate with: openssl rand -base64 32)
CRON_SECRET=your-cron-secret-here
